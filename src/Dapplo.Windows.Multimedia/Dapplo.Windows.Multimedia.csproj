<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <Description>Dapplo.Windows.Multimedia is a simple wrapper around WinMM</Description>
    <AssemblyTitle>Dapplo.Windows.Multimedia</AssemblyTitle>
    <AssemblyName>Dapplo.Windows.Multimedia</AssemblyName>
    <PackageId>Dapplo.Windows.Multimedia</PackageId>
    <PackageTags>windows native winmm</PackageTags>
    <TargetFrameworks>net471;netcoreapp3.0;netstandard2.0</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net471' ">
    <Reference Include="System" />
    <Reference Include="System.Core" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ClrHeapAllocationAnalyzer" Version="1.0.0.9" >
        <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
</Project>
